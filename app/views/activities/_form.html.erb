  </div>
  <div class="field">
    <%#= f.label :founder %><br>
    <%= f.text_field :founder %>
  </div>
  <div class="field">
    <%#= f.label :f_wechatid %><br>
    <%= f.text_field :f_wechatid %>
  </div>
  <div class="field">
    <%#= f.label :remarks %><br>
